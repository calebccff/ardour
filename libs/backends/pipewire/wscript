#!/usr/bin/env python
from waflib.extras import autowaf as autowaf
import os
import sys
import re

I18N_PACKAGE = 'pw-backend'

# Mandatory variables
top = '.'
out = 'build'

def options(opt):
    autowaf.set_options(opt)

def configure(conf):
    pass

def build(bld):
    obj = bld(features = 'cxx cxxshlib')
    obj.source = [
            'pipewire_backend.cc',
            'pipewire_client.cc',
            ]
    obj.includes = ['.']
    obj.name     = 'pipewire_backend'
    obj.target   = 'pipewire_backend'
    obj.use      = 'libardour libpbd'
    obj.uselib   = 'PIPEWIRE GLIBMM XML'
    obj.install_path  = os.path.join(bld.env['LIBDIR'], 'backends')
    obj.defines = ['PACKAGE="' + I18N_PACKAGE + '"',
                   'ARDOURBACKEND_DLL_EXPORTS'
                  ]
